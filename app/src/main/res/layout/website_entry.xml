<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/selectableItemBackground"
	android:minHeight="48dp">

	<com.google.android.material.textview.MaterialTextView
		android:id="@+id/website_entry_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/selectableItemBackground"
		android:clickable="true"
		android:gravity="center"
		android:layout_marginBottom="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:maxLines="1"
		android:textStyle="bold"
		android:textAppearance="?attr/textAppearanceSubtitle1"
		android:textColor="@color/mtrl_list_item_tint"/>
	
	<com.google.android.material.card.MaterialCardView
		android:id="@+id/website_entry_difficulty_icon"
		android:layout_width="24dp"
		android:layout_height="24dp"
		android:foreground="?attr/selectableItemBackground"
		android:clickable="true"
		android:layout_below="@id/website_entry_name"
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		app:strokeColor="#FFFFFF"
        app:strokeWidth="2dp"
		app:cardCornerRadius="12dp"
		app:cardBackgroundColor="#64B5F6" />
	
	<com.google.android.material.textview.MaterialTextView
		android:id="@+id/website_entry_difficulty"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/selectableItemBackground"
		android:clickable="true"
		android:layout_below="@id/website_entry_name"
		android:gravity="center"
		android:layout_marginTop="32dp"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:breakStrategy="balanced"
		android:maxLines="2"
		android:ellipsize="end"
		android:textStyle="italic"
		android:textAppearance="?attr/textAppearanceBody2"
		android:textColor="@color/mtrl_list_item_tint"/>
	
</RelativeLayout>
